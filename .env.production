# Production Environment Variables
NODE_ENV=production
PORT=3001

# Production Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/database?sslmode=require

# Security
JWT_SECRET=your-super-secure-production-jwt-key-256-bits-minimum

# AI Service
GEMINI_API_KEY=your-production-gemini-api-key

# CORS Origins (add your production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000